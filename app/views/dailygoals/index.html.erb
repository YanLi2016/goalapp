<h1>Listing dailygoals</h1>
<table>
  <thead>
    <tr>
      <th>Done</th>
      <th>Description</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

   <tbody>
    <% count = 0 %>
    <% @dailygoals.each do |dailygoal| %>
      <tr>
        <td><%= dailygoal.done %></td>
        <% count = count +1 if dailygoal.done == true %>
        <td><%= dailygoal.description %></td>
      </tr>
    <% end %>
  </tbody> 
</table>
<div class="progress">
  <div class="progress-bar" role="progressbar" style="width: <%= count %>%;">
    
  </div>
</div>

<br>

<%= button_to 'New Dailygoal', new_dailygoal_path(),  :method => :get %>
